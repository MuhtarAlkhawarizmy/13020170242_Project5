<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.Akun"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="13"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="0dp">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Profile"
            android:textStyle="bold"/>
        <androidx.appcompat.widget.Toolbar
            android:layout_alignParentRight="true"
            android:id="@+id/profileToolbar"
            app:menu="@menu/menu_edit_akun"
            app:titleTextColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:src="@drawable/foto_akun" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/img_id"
                        android:layout_width="40dp"
                        android:layout_height="70dp"/>
                    <TextView
                        android:id="@+id/textId3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Id_pengguna"
                        android:textSize="18dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/img_name"
                        android:layout_width="40dp"
                        android:layout_height="70dp"/>
                    <TextView
                        android:id="@+id/textNama3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Lengkap"
                        android:textSize="18dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/img_pass"
                        android:layout_width="40dp"
                        android:layout_height="70dp"/>
                    <TextView
                        android:id="@+id/textPass3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textSize="18dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/img_daftar"
                        android:layout_width="40dp"
                        android:layout_height="70dp"/>
                    <TextView
                        android:id="@+id/textAlamat3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat"
                        android:textSize="18dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/img_phone"
                        android:layout_width="40dp"
                        android:layout_height="70dp"/>
                    <TextView
                        android:id="@+id/textTelp3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. Telpon"
                        android:textSize="18dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/img_note"
                        android:layout_width="40dp"
                        android:layout_height="70dp"/>
                    <TextView
                        android:id="@+id/textNote3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informasi Tambahan"
                        android:textSize="18dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>